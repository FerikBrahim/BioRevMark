import numpy as np
import matplotlib.pyplot as plt

from src.encryption.flexentech import (
    encrypt,
    decrypt
)
from src.evaluation.entropy_analysis import (
    shannon_entropy,
    bit_correlation
)

# Simulated biometric feature vector
np.random.seed(42)
feature_vector = np.random.randint(0, 2, 512)

key = 7919
rounds = 5

# Encrypt
cipher = encrypt(feature_vector, key=key, rounds=rounds)

# Decrypt
recovered = decrypt(cipher, key=key, rounds=rounds)

print("Perfect recovery:", np.array_equal(feature_vector, recovered))

# Security metrics
entropy_plain = shannon_entropy(feature_vector)
entropy_cipher = shannon_entropy(cipher)
corr = bit_correlation(feature_vector, cipher)

print(f"Entropy (Plain):  {entropy_plain:.4f}")
print(f"Entropy (Cipher): {entropy_cipher:.4f}")
print(f"Correlation:      {corr:.4f}")


