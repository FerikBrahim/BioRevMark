import cv2
import numpy as np
import matplotlib.pyplot as plt

from src.features.orientation import compute_orientation_map
from src.features.ibsif import extract_ibsif_features

# Load fingerprint image
img_path = "../data/fingerprints/sample_fingerprint.png"
fingerprint = cv2.imread(img_path, cv2.IMREAD_GRAYSCALE)

plt.imshow(fingerprint, cmap="gray")
plt.title("Original Fingerprint")
plt.axis("off")

# Compute orientation map
orientation_map = compute_orientation_map(fingerprint, block_size=16)

plt.imshow(orientation_map, cmap="hsv")
plt.colorbar()
plt.title("Orientation Map")
plt.axis("off")

# Extract I-BSIF features
ibsif_vector = extract_ibsif_features(
    fingerprint,
    orientation_map,
    block_size=16,
    n_filters=8
)

print(f"I-BSIF feature length: {len(ibsif_vector)}")
print("First 64 bits:", ibsif_vector[:64])


