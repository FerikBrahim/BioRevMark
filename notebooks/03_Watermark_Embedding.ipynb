import cv2
import numpy as np
import matplotlib.pyplot as plt

from src.watermarking.embed import embed_watermark
from src.watermarking.extract import extract_watermark
from src.evaluation.imperceptibility import psnr, ssim

# Load medical image
img_path = "../data/medical/sample_ct.png"
image = cv2.imread(img_path, cv2.IMREAD_GRAYSCALE)

plt.imshow(image, cmap="gray")
plt.title("Original Medical Image")
plt.axis("off")


# Simulated encrypted watermark
watermark = np.random.choice([-1, 1], size=1024)

# Embed watermark
watermarked_image = embed_watermark(
    image=image,
    watermark=watermark,
    alpha=0.05,
    key=1234
)


# Quality assessment
print("PSNR:", psnr(image, watermarked_image))
print("SSIM:", ssim(image, watermarked_image))

plt.imshow(watermarked_image, cmap="gray")
plt.title("Watermarked Image")
plt.axis("off")
